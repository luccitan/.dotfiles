#!/bin/bash

# specify the absolutepath to the directory to usse when loading a plugin.

chunkc core::plugin_dir ~/.dotfiles/chunkwm/plugins

# if enabled, chunkwm will monitor the specified plugin_dir
# and automatically reload any '.so' file that is changed.

chunkc core::hotload 1

# shell commands require escaped quotes   to pass value containing a whitespace.

###########################################################################
# the following are config variables for the chunkwm-tiling plugin.
###########################################################################

chunkc set global_desktop_mode           bsp

chunkc set global_desktop_offset_top     10
chunkc set global_desktop_offset_bottom  10
chunkc set global_desktop_offset_left    10
chunkc set global_desktop_offset_right   10
chunkc set global_desktop_offset_gap     10

chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         5.0

chunkc set window_focus_cycle            monitor
chunkc set mouse_follows_focus           1
chunkc set window_float_next             0
chunkc set window_float_center           1
chunkc set window_region_locked          1

# If 1, new childs are affected as the "left" child
# It means on the left or on the top on the previous window
chunkc set bsp_spawn_left                0

# determines if the new split should be horizontal or vertical
chunkc set bsp_optimal_ratio             1.5
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set window_focus_cycle            monitor
chunkc set mouse_follows_focus           1
chunkc set window_float_next             0
chunkc set window_float_center           1
chunkc set window_region_locked          1

# these settings require chwm-sa.
# (https://github.com/koekeishiya/chwm-sa)
chunkc set window_float_topmost          0
chunkc set window_fade_inactive          0
chunkc set window_fade_alpha             0.85
chunkc set window_fade_duration          0.25
chunkc set window_use_cgs_move           0

# chunkc set mouse_modifier              \"cmd shift\"
chunkc set mouse_modifier                fn

chunkc set preselect_border_color        0x80d75f5f
chunkc set preselect_border_width        5
chunkc set preselect_border_radius       0

###########################################################################
# the following are config variables for the chunkwm-border plugin.
###########################################################################
chunkc set focused_border_color          0x80000000
chunkc set focused_border_width          3
chunkc set focused_border_radius         1
chunkc set focused_border_skip_floating  0

# specify plugins to load when chunkwm starts.
#       if chunkc plugin_dir is not set, the absolutepath is necessary.
chunkc core::load tiling.so
# chunkc core::load border.so
# chunkc core::load ffm.so

# chunkc tiling::rule -o Spotify -R AXStandardWindow -s native-fullscreen
# chunkc tiling::rule -R AXDialog -s float
chunkc tiling::rule -o \"Finder\" -s float
chunkc tiling::rule -o \"iTerm2\" -s float
chunkc tiling::rule -o \"App Store\" -s float
chunkc tiling::rule -o \"Kodi\" -s float -d 4
chunkc tiling::rule -o \"Airmail 2\" -s float
chunkc tiling::rule -o \"CleanMyMac 3\" -s float
